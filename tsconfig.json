{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "strict": false, // Disable strict mode (disables strict type checks)
    "noImplicitAny": false, // Disable warnings for implicit "any" types
    "noImplicitThis": false, // Disable warnings for implicit "this" types
    "strictNullChecks": false, // Disable warnings for strict null checks

    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/app/pages/login/page.tsx"
  ],
  "exclude": ["node_modules"]
}
